<form data-id={{game.id}} id='update-game-form'>
   <div class="container justify-content-around d-flex mb-3">
      <input type='text' style='height: 60px;' class='w-25 text-center rounded' name='game[name]' placeholder='Game Name' value='{{game.name}}'>
      <input type='text' style='height: 60px;' class='w-25 text-center rounded' name='game[score]' placeholder='Score out of 10' value='{{game.score}}'>
   </div>
   <div class='container d-flex justify-content-center flex-wrap'>
      <textarea type='text' class='w-90 mb-3 rounded' name='game[review]' placeholder='Review' style='height: 300px;'>{{game.review}}</textarea>
   </div>
   <div class="container flex-wrap justify-content-around d-flex">
      <input style='height: 60px;' type='submit' class='w-33 rounded-pill' value="Submit"></input>
      <button style='height: 60px;' data-id={{game.id}} type='button' id='cancel-update-game' class='w-33 rounded-pill'>Cancel</button>
   </div>
</form>